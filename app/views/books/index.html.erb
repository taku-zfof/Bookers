<h1>Books</h1>


<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%=link_to("show","/books/#{book.id}")%></td>
        <td>Edit</td>
        <td>Destroy</td>
      </tr>
    <% end %>
  </tbody>
</table>


<h1>New Book</h1>
<%=form_with model: @book do|f| %>
  <h4>title</h4>
  <%=f.text_field :title%>

  <h4>body</h4>
  <%=f.text_area :body%>

  <%=f.submit "Create Book"%>

<%end%>
